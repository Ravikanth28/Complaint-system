{
    "name": "complaint-system-functions",
    "version": "1.0.0",
    "description": "AWS Lambda functions for the complaint system",
    "scripts": {
        "build": "npm run build:submit && npm run build:analysis && npm run build:triage && npm run build:chatbot && npm run build:list",
        "build:submit": "esbuild submit-complaint/index.ts --bundle --platform=node --target=node20 --format=cjs --outfile=dist/submit-complaint/index.js",
        "build:analysis": "esbuild analysis-worker/index.ts --bundle --platform=node --target=node20 --format=cjs --outfile=dist/analysis-worker/index.js",
        "build:triage": "esbuild triage-agent/index.ts --bundle --platform=node --target=node20 --format=cjs --outfile=dist/triage-agent/index.js",
        "build:chatbot": "esbuild chatbot/index.ts --bundle --platform=node --target=node20 --format=cjs --outfile=dist/chatbot/index.js",
        "build:list": "esbuild list-complaints/index.ts --bundle --platform=node --target=node20 --format=cjs --outfile=dist/list-complaints/index.js"
    },
    "dependencies": {
        "@google/generative-ai": "^0.11.4",
        "aws-lambda": "^1.0.7",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@aws-sdk/client-s3": "^3.994.0",
        "@aws-sdk/util-dynamodb": "^3.994.0",
        "@types/aws-lambda": "^8.10.138",
        "@types/node": "^20.12.12",
        "@types/uuid": "^10.0.0",
        "esbuild": "^0.27.3",
        "typescript": "^5.4.5"
    }
}